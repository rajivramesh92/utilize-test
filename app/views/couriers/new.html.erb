<h2>Create Order</h2>
<%= form_for(@courier) do |f| %>
  <% if @courier.errors.full_messages.any? %>
    <% @courier.errors.full_messages.each do |error_message| %>
      <%= error_message if @courier.errors.full_messages.first == error_message %> <br />
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label :weight %>
    <%= f.number_field :weight, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :service_type %>
    <%= f.select :service_type, ['Speed Post', 'Regular'],{} , class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :payment_mode %><br />
    <%= f.select :payment_mode, ['COD', 'Prepaid'], {}, class: 'form-control' %>
  </div>

  <div class= "form-group">
    <%= f.label :cost %>
    <%= f.number_field :cost, class: 'form-control' %>
  </div>

  <div class= "form-group">
    <%= f.label :receiver %>
    <%= f.select :receiver_id, @users, {}, class: 'form-control' %>
  </div>

  <div class="mt-3">
    <%= f.submit "Create Order", class: "btn btn-primary" %>
  </div>
<% end %>

<h2>My Order</h2>
<%= form_tag (search_order_couriers_path) do %>
  <div class="form-group">
    <%= label_tag "Order Number" %>
    <%= text_field_tag "order_number", '', class: 'form-control', placeholder: 'Search by order number', required: true %>
  </div>
  <div class="mt-3">
    <%= submit_tag "Search", class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="ma-5">
  <h2>Order Details</h2>

  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Recieved Orders</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Sent Order</button>
    </li>
  </ul>

  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Order Number</th>
            <th scope="col">Weight</th>
            <th scope="col">Status</th>
            <th scope="col">Service Type</th>
            <th scope="col">Payment Mode</th>
            <th scope="col">Cost</th>
            <th scope="col">Sent By</th>
            <th scope="col">Address</th>
          </tr>
        </thead>
        <tbody>
          <% @received_orders.each_with_index do |order, i|%>
            <tr>
              <th scope="row"><%= i + 1%></th>
              <td><%= order.order_number%></td>
              <td><%= order.weight%>Gram</td>
              <td><%= order.status%></td>
              <td><%= order.service_type%></td>
              <td><%= order.payment_mode%></td>
              <td><%= order.cost%>Rs.</td>
              <td><%= order.user.full_name%></td>
              <td><%= order.user.address.full_address%></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Order Number</th>
            <th scope="col">Weight</th>
            <th scope="col">Status</th>
            <th scope="col">Service Type</th>
            <th scope="col">Payment Mode</th>
            <th scope="col">Cost</th>
            <th scope="col">Sent By</th>
            <th scope="col">Address</th>
          </tr>
        </thead>
        <tbody>
          <% @sent_orders.each_with_index do |order, i|%>
            <tr>
              <th scope="row"><%= i + 1%></th>
              <td><%= order.order_number%></td>
              <td><%= order.weight%> Gram</td>
              <td><%= order.status%></td>
              <td><%= order.service_type%></td>
              <td><%= order.payment_mode%></td>
              <td><%= order.cost%>Rs.</td>
              <td><%= order.user.full_name%></td>
              <td><%= order.user.address.full_address%></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
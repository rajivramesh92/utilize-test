<div class="m-5">
  <h2>Create Order</h2>

  <%= form_for(@courier) do |f| %>

  <div class="form-group">
    <%= f.label :weight, class: "form-label" %><br/>
    <%= f.number_field :weight, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :service_type, class: "form-label" %><br />
    <%= f.select :service_type, ['Speed Post', 'Regular'],{} , class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :payment_mode, class: "form-label" %><br />
    <%= f.select :payment_mode, ['COD', 'Prepaid'], {}, class: 'form-control' %>
  </div>

  <div class= "form-group">
    <%= f.label :cost, class: "form-label" %><br/>
    <%= f.number_field :cost, class: 'form-control' %>
  </div>

  <div class= "form-group">
    <%= f.label :receiver, class: "form-label" %><br/>
    <%= f.select :receiver_id, @users, {}, class: 'form-control' %>
  </div>


  <div class="mt-3">
      <%= f.submit "Create Order" %>
  </div>
  <% end %>
</div>